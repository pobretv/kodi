<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.pobretv" name="Pobre.tv" provider-name="Pobre.tv" version="1.0.4">
 <requires>
  <import addon="xbmc.python" version="3.0.0"/>
  <import addon="plugin.video.youtube" optional="true" />
  <import addon="script.module.six" />
  <import addon="script.module.simplejson" />
  </requires>
 <extension library="addon.py" point="xbmc.python.pluginsource">
  <provides>video</provides>
 </extension>
 <extension point="xbmc.addon.metadata">
    <summary lang="en">Pobre.tv</summary>
    <description lang="en">Filmes, séries e animes no Kodi. O addon ainda está em versão muito beta, atualizações brevemente</description>
    <description lang="en"></description>
    <disclaimer lang="en">Nem todo o conteúdo está disponível no addon</disclaimer>
    <language></language>
    <platform>all</platform>
    <license></license>
    <forum></forum>
    <website></website>
    <email></email>
    <source></source>
     <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
        <banner></banner>
        <clearlogo></clearlogo>
        <screenshot></screenshot>
    </assets>
 </extension>
</addon>

<addon id="repository.pobretv" name="Repositório pobre.tv" version="1.0.1" provider-name="Pobre.tv">
	<extension point="xbmc.addon.repository" name="Repositório pobre.tv">
		<info compressed="false">https://raw.githubusercontent.com/pobretv/kodi/main/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/pobretv/kodi/main/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/pobretv/kodi/main/repository/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repositório pobre.tv</summary>
		<description>Repositório oficial para poder facilmente instalar o addon video do pobre.tv</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
